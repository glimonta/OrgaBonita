
repeat

   if x = y then
   begin
      if B = A then
      begin
	 Agrego "N" a C
	 Avanzo espacio en C
	 Muevo al primero de B
	 y++
	 x = 0
      end
      else
      begin
	 avanzo espacio en B
	 x++
      end
   end

   if x <> y then
   begin
      Agrego "B" a C
      Avanzo espacio en C
      Muevo al primer de B
      y++
      x = 0
   end
   else
   begin
      avanzo espacio en "B"
      x++
   end

   if x > max then
   begin
      agrego "x" a C
      avanzo espacio en C
      Muevo al primer B
      y++
      x=0
   end
   
until y > Max;